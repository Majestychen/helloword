<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background" >
    
    <RelativeLayout
        android:layout_width="fill_parent"
    	android:layout_height="0dp"
        android:layout_weight="5">
        
        <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_logo"
        android:contentDescription="@string/app_name" />
        
        <Button
            android:id="@+id/login_quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/quit_bell" />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        
        <TextView
            android:id="@+id/login_textView_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="@string/word_account"
            android:layout_centerVertical="true" />
        
        <ImageView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:background="@drawable/round_rectangle"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name" />

        <EditText
            android:id="@+id/login_username"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignBaseline="@id/login_textView_account"
            android:layout_toRightOf="@id/login_textView_account"
            android:background="@null"
            android:hint="@string/sentence_enter_username"
            android:inputType="text"
            android:maxLength="16"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:textColor="#1d1d1d"
            android:textColorHint="#666666"
            android:textSize="16sp" />

        

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        <TextView
            android:id="@+id/login_textView_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:text="@string/word_password" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@id/login_textView_password"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/login_textView_password"
            android:background="@null"
            android:hint="@string/sentence_enter_password"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:textColor="#1d1d1d"
            android:textColorHint="#666666"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/round_rectangle"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
		android:layout_height="0dp"
    	android:layout_weight="0.5" >
        
        <CheckBox
    		android:id="@+id/login_remember_info"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_centerHorizontal="true"
    		android:background="@null"
    		android:button="@drawable/checkbox"
    		android:text="@string/sentence_remember_info"
    		android:textColor="#ffffff"
    		android:textSize="12sp" />
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >
        
        <Button
    		android:id="@+id/login_loginbutton"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:background="@drawable/login_person"
    		android:layout_centerVertical="true"
    		android:layout_alignParentLeft="true"
    		android:layout_marginLeft="80dp"
    		android:onClick="loginHandler" />
        
        <Button
    		android:id="@+id/login_registerbutton"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_centerVertical="true"
    		android:layout_alignParentRight="true"
    		android:layout_marginRight="80dp"
    		android:background="@drawable/login_plus"
    		android:onClick="registerHandler" />
        
    </RelativeLayout>
    
</LinearLayout>